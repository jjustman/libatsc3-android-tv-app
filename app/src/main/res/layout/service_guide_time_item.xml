<?xml version="1.0" encoding="utf-8"?>
<com.nextgenbroadcast.mobile.tvandroid.servicesGuide.view.ServiceGuideTimeItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ServicesGuideItem.Header">

    <TextView
        android:id="@+id/period_description_view"
        style="@style/ESGTime.Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="On Now" />

    <TextView
        android:id="@+id/period_time_view"
        style="@style/ESGTime.Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="7:00 AM" />

</com.nextgenbroadcast.mobile.tvandroid.servicesGuide.view.ServiceGuideTimeItemView>